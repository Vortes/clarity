{
    "manifest_version": 3,
    "name": "Clarity",
    "version": "0.1.0",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ],
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab"
    ]
}