{
    "manifest_version": 3,
    "name": "Clarity",
    "version": "0.1.0",
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["content-script.js"],
            "css": ["global.css"]
        }
    ],
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["https://*/*"]
}